{
  "name": "Brightdata MCP",
  "description": "An MCP server providing access to Bright Data web data extraction tools for Heroku Inference",
  "repository": "https://github.com/dsouza-anush/brightdata-mcp-heroku",
  "keywords": ["mcp", "brightdata", "web-scraping", "data-extraction", "heroku-inference", "heroku-mcp"],
  "env": {
    "API_TOKEN": {
      "description": "Your Bright Data API token",
      "required": true
    },
    "WEB_UNLOCKER_ZONE": {
      "description": "Zone name for web unlocker (default: mcp_unlocker)",
      "required": false,
      "value": "mcp_unlocker"
    },
    "BROWSER_ZONE": {
      "description": "Zone name for browser (default: mcp_browser)",
      "required": false,
      "value": "mcp_browser"
    },
    "RATE_LIMIT": {
      "description": "Rate limit in format '100/1h' or '50/30m'",
      "required": false
    }
  },
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 0,
      "size": "basic"
    }
  }
}